@model IEnumerable<FoxdonRetail.Models.ProductImageTbl>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ImagePath)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductTbl.ProductName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="~/Imageupload/@item.ImagePath" width="500" height="500" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductTbl.ProductName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ProdImgID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ProdImgID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ProdImgID })
        </td>
    </tr>
}

</table>
